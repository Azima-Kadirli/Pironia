@model ProductUpdateViewModel

<div class="container">
    <div class="row">
        <h2>Update Product</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <div class="form-group">
                <label for="CategoryId">Category</label>

                <select asp-for="CategoryId" id="CategoryId" class="form-control">
                    <option value="" disabled selected>Category seçin</option>

                    @if (ViewBag.Categories != null)
                    {
                        foreach (Category category in ViewBag.Categories)
                        {
                            <option value="@category.Id">
                                @category.Name
                            </option>
                        }
                    }
                </select>

                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>

            <div class="form-group">
                <label asp-for="TagIds"></label>
                <select asp-for="TagIds" id="TagIds">
                    <option value="null" disabled selected>Tag secin</option>
                    @foreach (Tag tag in ViewBag.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="TagIds"></span>
            </div>

            
            <div class="form-group">
                <input type="hidden" asp-for="MainImagePath">
                <img src="~/assets/images/website-images/@Model.MainImagePath" width="50" height="50"/>
                <label asp-for="MainImage">Main Image</label>
                <input asp-for="MainImage" class="form-control"/>
                <span class="text-danger" asp-validation-for="MainImage"></span>
            </div>
            
            <div class="form-group">
                <input type="hidden" asp-for="HoverImagePath">
                <img src="~/assets/images/website-images/@Model.HoverImagePath" width="50" height="50">
                <label asp-for="HoverImage">Hover Image</label>
                <input asp-for="HoverImage" class="form-control"/>
                <span class="text-danger" asp-validation-for="HoverImage"></span>
            </div>
            
            @for (int i = 0; i < Model.AdditionalImagesPath.Count; i++)
            {
                <div class="imageDiv">
                    
                <input type="hidden" asp-for="AdditionalImagesPath" value="@Model.AdditionalImagesPath[i]">
                <input type="hidden" asp-for="AdditionalImagesIds" value="@Model.AdditionalImagesIds[i]">
                <div class="image" style="position:relative;width:50px;height:50px;display:inline">
                    <img src="~/assets/images/website-images/@Model.AdditionalImagesPath[i]" width="50" height="50" />
                    <span class="closeButton" style="position:absolute;right:4px;top:-14px;padding:1px;background-color:red;color:white;font-size:10px;cursor:pointer">x</span>
                </div>
                </div>
            }
            
            <div class="form-group">
                <label asp-for="Images">Additional Images</label>
                <input asp-for="Images" type="file" multiple class="form-control" />
                <span class="text-danger" asp-validation-for="Images"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Update</button>
        </form>
    </div>
</div>
<script>
    const removeButtons = document.querySelectorAll(".closeButton");
    removeButtons.forEach(btn=> {
        btn.addEventListener("click", (e) => {
            e.preventDefault();
            btn.parentElement.parentElement.remove();
        })
    })
    
</script>
